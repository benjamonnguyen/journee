templ emotionSelection(options []emotionOption) {
    <fieldset style="margin-bottom: 10px;" required>
        <legend>How did you feel today?</legend>
        for _, opt := range options {
            <div>
                <input type="radio" id={ opt.getID() } value={ opt.getID() } name="emotion-selection" />
                <label for={ opt.getID() }>{ opt.Emoji }</label>
            </div>
        }
    </fieldset>
}

type emotionOption struct {
    ID emotion
    Emoji string
}

func (o emotionOption) getID() string {
    return fmt.Sprintf("%d", o.ID)
}